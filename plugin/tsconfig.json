{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "target": "es2017",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
