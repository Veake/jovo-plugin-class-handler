{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "target": "es2017",
    "sourceMap": true
  },
  "include": [
    "./types.d.ts",
    "./index.ts",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./node_modules/**/*",
    "./**/*.spec.ts"
  ]
}
